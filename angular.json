{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "saico": {
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "skipTests": true
        },
        "@saico/schematics:component-view": {
          "style": "scss",
          "skipTests": true
        },
        "@saico/schematics:component-add": {
          "style": "scss",
          "skipTests": true
        },
        "@saico/schematics:component-edit": {
          "style": "scss",
          "skipTests": true
        },
        "@saico/schematics:component-list": {
          "style": "scss",
          "skipTests": true
        },
        "@saico/schematics:crud": {
          "style": "scss",
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:module": {
          "routing": true,
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        },
        "@saico/schematics:core-service": {
          "skipTests": true
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/eFV",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": false,
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
             "./node_modules/@angular/material/prebuilt-themes/indigo-pink.css",
              "node_modules/@fortawesome/fontawesome-free/css/fontawesome.min.css",
              "node_modules/@fortawesome/fontawesome-free/css/solid.min.css",
              "node_modules/@fortawesome/fontawesome-free/css/regular.min.css",
              "node_modules/ol/ol.css",
              "node_modules/summernote/dist/summernote-bs4.css",
              "node_modules/@angular/cdk/overlay-prebuilt.css",
              "src/styles.scss",
              {
                "input": "src/styles-dark.scss",
                "lazy": true,
                "bundleName": "assets/dark"
              }
            ],
            "scripts": [
              "node_modules/jquery/dist/jquery.min.js",
              "src/vendor/js/loader.js",
              "node_modules/popper.js/dist/umd/popper.min.js",
              "node_modules/bootstrap/dist/js/bootstrap.min.js",
              "node_modules/summernote/dist/summernote-bs4.min.js",
              "node_modules/summernote/lang/summernote-es-ES.js",
              "node_modules/chart.js/dist/Chart.min.js",
              "node_modules/randomcolor/randomColor.js"
            ],
            "es5BrowserSupport": true,
            "stylePreprocessorOptions": {
              "includePaths": [
                "node_modules/bootstrap",
                "src/scss"
              ]
            }
          },
          "configurations": {
            "dev": {
              "extractCss": true
            },
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": true,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "5mb",
                  "maximumError": "10mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            },
            "datys": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.datys.ts"
                }
              ],
              "main": "src/main.hmr.ts",
              "tsConfig": "tsconfig.hmr.json",
              "extractCss": true
            },
            "hmr": {
              "sourceMap": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.hmr.ts"
                }
              ],
              "main": "src/main.hmr.ts",
              "tsConfig": "tsconfig.hmr.json",
              "extractCss": true
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "saico:build",
            "disableHostCheck": true,
            "port": 4206,
            "host": "0.0.0.0"
          },
          "configurations": {
            "dev": {
              "open": true,
              "browserTarget": "saico:build:dev"
            },
            "production": {
              "open": true,
              "browserTarget": "saico:build:production"
            },
            "hmr": {
              "hmr": true,
              "open": true,
              "browserTarget": "saico:build:hmr"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "saico:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "./node_modules/@angular/material/prebuilt-themes/indigo-pink.css",
              "src/styles.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json",
              "e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "saico:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "saico:serve:production"
            }
          }
        }
      }
    },
    "saico-schematics": {
      "root": "projects/saico-schematics",
      "sourceRoot": "projects/saico-schematics/src",
      "projectType": "library",
      "prefix": "lib",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss",
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:module": {
          "routing": true,
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/saico-schematics/tsconfig.lib.json",
            "project": "projects/saico-schematics/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/saico-schematics/src/test.ts",
            "tsConfig": "projects/saico-schematics/tsconfig.spec.json",
            "karmaConfig": "projects/saico-schematics/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/saico-schematics/tsconfig.lib.json",
              "projects/saico-schematics/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "saico",
  "cli": {
    "analytics": false
  }
}
